---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
  src: ImageMetadata; // El src ahora es de tipo ImageMetadata
  alt: string;
}

const { src, alt } = Astro.props;
---

<div class="group relative overflow-hidden rounded-lg shadow-lg aspect-square">
  <Image
    src={src}
    alt={alt}
    widths={[300, 600, 900]}
    sizes="(max-width: 640px) 300px, (max-width: 1024px) 600px, 900px"
    loading="lazy" 
    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
  />
  <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end p-4">
    <p class="text-white text-lg font-semibold">{alt}</p>
  </div>
</div>
